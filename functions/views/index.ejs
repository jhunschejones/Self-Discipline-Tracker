<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">

    <title>Self Discipline Tracker</title>
  </head>
  <body>
    <div class="container-fluid text-center">
        <br />
        <h1>Self Discipline Tracker</h1>
        <br />
        <button type="button" id="add_button" class="btn btn_purple text-white">&nbsp;&nbsp;&nbsp;&nbsp;Add&nbsp;&nbsp;&nbsp;&nbsp;</button>
        <button type="button" id="subtract_button" class="btn btn_purple text-white">Subtract</button>
        <button type="button" id="reset_button" class="btn btn_purple text-white">&nbsp;&nbsp;Reset&nbsp;&nbsp;</button>
        <br />
        <br />
        <div class="card text-center mx-auto bg-light mb-3" style="max-width: 18rem;">
            <!-- <div class="card-header">Header</div> -->
            <div class="card-body">
              <h5 class="card-title">Today I Am Stronger:</h5>
              <h1 class="card-text"><span id='click_count'></span></h1>
            </div>
          </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
